{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node", "hardhat"],
    "typeRoots": ["./node_modules/@types", "./scripts/types"],
    "skipLibCheck": true
  },
  "include": [
    "hardhat.config.ts",
    "scripts/**/*.ts",
    "demo/**/*.ts",
    "test/**/*.ts",
    "docs/**/*.ts",
    "packages/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
