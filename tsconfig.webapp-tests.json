{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "types": ["node", "jest"],
    "skipLibCheck": true
  },
  "include": [
    "apps/console/src/**/*",
    "apps/console/__tests__/**/*"
  ]
}
