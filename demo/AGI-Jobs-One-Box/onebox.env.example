# Core orchestrator connectivity
ONEBOX_PORT=8080
ONEBOX_RPC_URL=https://mainnet.infura.io/v3/YOUR_KEY
ONEBOX_RELAYER_PRIVATE_KEY=0xYOUR_PRIVATE_KEY
ONEBOX_API_TOKEN=change-me-superuser-token
ONEBOX_CORS_ALLOW=http://localhost:3000

# Explorers & UX affordances
ONEBOX_EXPLORER_TX_BASE=https://etherscan.io/tx/
ONEBOX_STATUS_LIMIT=6
ONEBOX_TOKEN_DECIMALS=18

# IPFS pinning (choose one provider)
PINNER_HOST=https://api.web3.storage
PINNER_TOKEN=YOUR_WEB3_STORAGE_KEY
# PINNER_HOST=https://api.pinata.cloud
# PINNER_KEY=YOUR_PINATA_KEY
# PINNER_SECRET=YOUR_PINATA_SECRET

# Policy guardrails (optional overrides)
ONEBOX_MAX_JOB_BUDGET_AGIA=1000
ONEBOX_MAX_JOB_DURATION_DAYS=45
ONEBOX_POLICY_PATH=config/org-policy/default.json
