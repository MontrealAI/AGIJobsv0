{
  "compilerOptions": {
    "target": "ES2021",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowArbitraryExtensions": true
  },
  "include": ["index.ts", "./ownerAtlas.d.ts", "./global.d.ts", "../shared/**/*.d.ts"],
  "ts-node": {
    "esm": true
  }
}
