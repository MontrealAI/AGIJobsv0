        "node": {
          "id": "helios.solaris-backup",
          "region": "helios",
          "capacity": 20,
          "specialties": ["gpu", "astronomy"],
          "heartbeatIntervalSec": 9,
          "maxConcurrency": 12
        }
      }
    },
    {
      "tick": 220,
      "note": "Snapshot the fabric after governance actions",
      "command": {
        "type": "checkpoint.save",
        "reason": "Archive post-update state"
      }
    },
    {
      "tick": 260,
      "note": "Tighten checkpoint cadence during solar storm",
      "command": {
        "type": "checkpoint.configure",
        "reason": "Increase redundancy",
        "update": {
          "intervalTicks": 20,
          "path": "demo/Planetary-Orchestrator-Fabric-v0/storage/checkpoints/solar-storm.json"
        }
      }
    },
    {
      "tick": 280,
      "note": "Reroute urgent Mars manufacturing job to Helios",
      "command": {
        "type": "job.reroute",
        "jobId": "job-09000",
        "targetShard": "helios",
        "reason": "Owner escalation to Helios GPU helion"
      }
    },
    {
      "tick": 285,
      "note": "Cancel redundant Earth logistics job after reroute",
      "command": {
        "type": "job.cancel",
        "jobId": "job-09001",
        "reason": "Owner resolved ticket manually"
      }
    }
  ]
}
