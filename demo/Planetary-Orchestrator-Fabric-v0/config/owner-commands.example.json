      "command": {
        "type": "system.pause",
        "reason": "Helios GPU thermal recalibration"
      }
    },
    {
      "tick": 150,
      "note": "Resume once calibration completes",
      "command": {
        "type": "system.resume",
        "reason": "Calibration complete"
      }
    },
    {
      "tick": 155,
      "note": "Boost Earth queue budget to handle backlog",
      "command": {
        "type": "shard.update",
        "shard": "earth",
        "update": {
          "maxQueue": 6400,
          "router": {
            "queueAlertThreshold": 3600
          }
        }
      }
    },
    {
      "tick": 180,
      "note": "Introduce Helios backup GPU helion",
      "command": {
        "type": "node.register",
