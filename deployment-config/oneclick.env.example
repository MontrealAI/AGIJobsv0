# Copy this file to deployment-config/oneclick.env and customise for your network.
# Safe defaults are intentionally restrictive; update values once you verify your
# deployment and pause state.

# Blockchain connectivity
RPC_URL=http://anvil:8545
CHAIN_ID=31337
AGJ_NETWORK=localhost
AGIALPHA_TOKEN=0x0000000000000000000000000000000000000000
AGIALPHA_DECIMALS=18
JOB_REGISTRY=0x0000000000000000000000000000000000000000
STAKE_MANAGER_ADDRESS=0x0000000000000000000000000000000000000000
VALIDATION_MODULE_ADDRESS=0x0000000000000000000000000000000000000000
DISPUTE_MODULE_ADDRESS=0x0000000000000000000000000000000000000000
REPUTATION_ENGINE_ADDRESS=0x0000000000000000000000000000000000000000
SYSTEM_PAUSE_ADDRESS=0x0000000000000000000000000000000000000000

# Authentication & API tokens
ONEBOX_API_TOKEN=change-me
ONEBOX_RELAYER_PRIVATE_KEY=
GATEWAY_API_KEY=change-me

# Orchestrator controls
ONEBOX_MAX_JOB_BUDGET_AGIA=10
ONEBOX_MAX_JOB_DURATION_DAYS=3
ONEBOX_STATUS_LIMIT=25
ONEBOX_CORS_ALLOW=http://localhost:3000,http://localhost:3001
ORCHESTRATOR_STATE_BACKEND=file
ORCHESTRATOR_STATE_URL=

# Notification service
NOTIFICATIONS_PORT=8075

# Front-ends
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000
NEXT_PUBLIC_ORCHESTRATOR_URL=http://localhost:8080
